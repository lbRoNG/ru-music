<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/home_songlist_w"
    android:layout_height="@dimen/home_songlist_h"
    android:elevation="@dimen/dp2">

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_home_songlist_default_cover_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_basic_song_list_bg"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp16"
        android:paddingTop="@dimen/dp8"
        android:paddingEnd="@dimen/dp16">

        <TextView
            android:id="@+id/tv_list_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp18"
            tools:text="Summer Hot" />

        <TextView
            android:id="@+id/tv_list_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp2"
            android:singleLine="true"
            android:textColor="@color/textTransparent"
            android:textSize="@dimen/sp12"
            tools:text="45 Songs" />

    </LinearLayout>

</RelativeLayout>