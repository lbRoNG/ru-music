<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp32"
        android:layout_marginTop="@dimen/dp32"
        android:text="Playlist"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/tv_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_list"
        android:layout_alignStart="@id/tv_list"
        android:text="Driving"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/sp18"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_list"
        android:layout_alignBottom="@id/tv_list_name"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dp16"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:contentDescription="@null"
        android:focusable="true"
        android:padding="@dimen/dp4"
        android:src="@drawable/ic_play_detail_back" />

    <ImageView
        android:id="@+id/iv_sort_1"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_below="@id/tv_list_name"
        android:layout_alignStart="@id/tv_list"
        android:layout_marginTop="@dimen/dp16"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:contentDescription="@null"
        android:focusable="true"
        android:src="@drawable/ic_play_detail_sort_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_sort_1"
        android:layout_alignBottom="@id/iv_sort_1"
        android:layout_marginStart="@dimen/dp24"
        android:layout_marginEnd="@dimen/dp24"
        android:layout_toStartOf="@id/iv_sort_more"
        android:layout_toEndOf="@id/iv_sort_1"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_sort_2"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginEnd="@dimen/dp32"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="@null"
            android:focusable="true"
            android:src="@drawable/ic_play_detail_sort_random_default" />

        <ImageView
            android:id="@+id/iv_sort_3"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="@dimen/dp32"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="@null"
            android:focusable="true"
            android:src="@drawable/ic_play_detail_sort_loop_default" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_sort_more"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_alignTop="@id/iv_sort_1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dp32"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:contentDescription="@null"
        android:focusable="true"
        android:src="@drawable/ic_play_detail_more_1" />

</RelativeLayout>