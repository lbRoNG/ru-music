<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/play_playlist_header_h"
    android:background="@color/colorAccent">

    <TextView
        android:id="@+id/tv_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp16"
        android:layout_toStartOf="@id/iv_random"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp16"
        tools:text="0 / 123" />

    <ImageView
        android:id="@+id/iv_random"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp8"
        android:layout_toStartOf="@id/iv_more"
        android:contentDescription="@null"
        android:foreground="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_play_playlist_start_random"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_more"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp8"
        android:contentDescription="@null"
        android:foreground="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_play_playlist_header_more" />

</RelativeLayout>