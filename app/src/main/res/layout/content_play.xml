<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <TextView
        android:id="@+id/tv_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp32"
        android:layout_marginTop="@dimen/dp32"
        android:text="@string/play_detail_song_list"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/tv_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_list"
        android:layout_alignStart="@id/tv_list"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/sp16"
        android:textStyle="bold"
        tools:text="Driving" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_list"
        android:layout_alignBottom="@id/tv_list_name"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dp16"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:contentDescription="@null"
        android:focusable="true"
        android:padding="@dimen/dp4"
        android:src="@drawable/ic_play_detail_back" />

    <ImageView
        android:id="@+id/iv_sort_1"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_below="@id/tv_list_name"
        android:layout_alignStart="@id/tv_list"
        android:layout_marginTop="@dimen/dp16"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:contentDescription="@null"
        android:focusable="true"
        android:src="@drawable/sel_play_method_order" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_sort_1"
        android:layout_alignBottom="@id/iv_sort_1"
        android:layout_marginStart="@dimen/dp24"
        android:layout_marginEnd="@dimen/dp24"
        android:layout_toStartOf="@id/iv_sort_more"
        android:layout_toEndOf="@id/iv_sort_1"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_sort_2"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="@null"
            android:focusable="true"
            android:src="@drawable/sel_play_method_random" />

        <ImageView
            android:id="@+id/iv_sort_3"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="@dimen/dp40"
            android:layout_marginEnd="@dimen/dp40"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="@null"
            android:focusable="true"
            android:src="@drawable/sel_play_method_single" />

        <ImageView
            android:id="@+id/iv_sort_4"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="@null"
            android:focusable="true"
            android:src="@drawable/sel_play_method_order_loop" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_sort_more"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_alignTop="@id/iv_sort_1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dp32"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:contentDescription="@null"
        android:focusable="true"
        android:src="@drawable/ic_play_detail_more_1" />

    <ImageView
        android:id="@+id/iv_cover_bg"
        android:layout_width="@dimen/play_detail_cover_width_height"
        android:layout_height="@dimen/play_detail_cover_width_height"
        android:layout_below="@id/iv_sort_more"
        android:layout_marginStart="@dimen/play_detail_cover_bg_margin"
        android:layout_marginTop="@dimen/dp32"
        android:contentDescription="@null"
        android:src="@drawable/ic_play_detail_cover_bg" />

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/play_detail_cover_width_height"
        android:layout_height="@dimen/play_detail_cover_width_height"
        android:layout_alignTop="@id/iv_cover_bg"
        android:layout_marginStart="@dimen/dp32"
        app:cardCornerRadius="6dp"
        app:cardElevation="3dp">

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@color/colorAccent" />

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/ll_controller"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/iv_cover_bg"
        android:layout_marginStart="@dimen/dp32"
        android:layout_marginTop="@dimen/dp32"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_pre"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:clickable="true"
            android:contentDescription="@null"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:padding="@dimen/dp12"
            android:src="@drawable/ic_play_detail_previous" />

        <ImageView
            android:id="@+id/iv_start"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="0.5dp"
            android:layout_marginEnd="0.5dp"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:clickable="true"
            android:contentDescription="@null"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:padding="@dimen/dp12"
            android:src="@drawable/ic_play_detail_pause" />

        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:clickable="true"
            android:contentDescription="@null"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:padding="@dimen/dp12"
            android:src="@drawable/ic_play_detail_next" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_controller"
        android:layout_alignStart="@id/ll_controller"
        android:layout_marginTop="@dimen/dp32"
        android:layout_marginEnd="@dimen/dp16"
        android:layout_toStartOf="@id/iv_sort_more_2"
        android:singleLine="true"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/sp16"
        android:textStyle="bold"
        tools:text="The Fall" />

    <TextView
        android:id="@+id/tv_singer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_song_name"
        android:layout_alignStart="@id/tv_song_name"
        android:layout_marginTop="@dimen/dp4"
        android:textColor="@color/colorAccent"
        tools:text="Hucci" />

    <ImageView
        android:id="@+id/iv_sort_more_2"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_alignTop="@id/tv_song_name"
        android:layout_alignBottom="@id/tv_singer"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dp32"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:contentDescription="@null"
        android:focusable="true"
        android:src="@drawable/ic_play_detail_more_2" />

    <SeekBar
        android:id="@+id/skb_song"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_singer"
        android:layout_marginStart="18dp"
        android:layout_marginTop="@dimen/dp32" />

    <TextView
        android:id="@+id/tv_song_current_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/skb_song"
        android:layout_alignStart="@id/tv_song_name"
        android:layout_marginTop="@dimen/dp4"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/sp12"
        tools:text="00:00" />

    <TextView
        android:id="@+id/tv_song_total_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/skb_song"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dp4"
        android:layout_marginEnd="@dimen/dp16"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/sp12"
        tools:text="3:49" />

    <ProgressBar
        android:id="@+id/view_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:progressDrawable="@drawable/basic_play_progress_bg"
        tools:progress="30" />
</RelativeLayout>