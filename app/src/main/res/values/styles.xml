<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextPrimary">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/sp14</item>
    </style>

    <style name="TextSecondary">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">@dimen/sp12</item>
    </style>

    <style name="LineHorizontal">
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/divider</item>
    </style>

</resources>
